{
  "name": "@money-saver/backend",
  "version": "2.0.0",
  "description": "Personal expenses manager",
  "main": "daemon.js",
  "scripts": {
    "setup": "npm install && tsc --project tsconfig.json --traceResolution && uuidgen > ./target/memcached.key && uuidgen > ./target/session.key",
    "update": "npm install && tsc --project tsconfig.json --traceResolution",
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "deploy:setup": "pm2 deploy production setup",
    "deploy:update": "pm2 deploy production update",
    "start": "node source/daemon.js -b finance.db -v",
    "test": "jest",
    "clean": "rm -frv target/api target/bl target/dal target/shared target/support target/tests target/daemon*"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:idenisovs/money-saver.git"
  },
  "keywords": [
    "money",
    "finances",
    "cash",
    "expenses",
    "manager"
  ],
  "bugs": {
    "url": "https://github.com/idenisovs/money-saver/issues",
    "email": "i.denisovs@gmail.com"
  },
  "author": "Ilya Denisov",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "connect-memcached": "^1.0.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "http-status": "^1.5.0",
    "log4js": "^6.3.0",
    "moment": "^2.29.1",
    "ms": "^2.1.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "sqlite3": "^5.0.2",
    "uuid": "^8.3.2",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.23",
    "@types/memcached": "^2.2.6",
    "@types/ms": "^0.7.31",
    "@types/node": "^15.12.4",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.33",
    "@types/sqlite3": "^3.1.7",
    "@types/uuid": "^8.3.0",
    "@types/yargs": "^17.0.0",
    "jest": "^27.0.5",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.3"
  }
}
