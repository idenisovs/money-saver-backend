{
  "name": "@money-saver/backend",
  "version": "2.0.2",
  "description": "Personal expenses manager",
  "main": "daemon.js",
  "scripts": {
    "setup": "npm install && tsc --project tsconfig.json && cp .env.example target/.env && npm run keys",
    "update": "npm install && tsc --project tsconfig.json",
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "deploy:setup": "pm2 deploy production setup",
    "deploy:update": "pm2 deploy production update",
    "start": "node target/daemon.js -b ../finance.db -vd",
    "test": "jest",
    "clean": "rm -frv target/api target/bl target/dal target/shared target/support target/tests target/daemon*",
    "keys": "sed -i -e \"/MEMCACHED_KEY/s/<.*>/$(uuidgen)/\" -e \"/SESSION_KEY/s/<.*>/$(uuidgen)/\" target/.env"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:idenisovs/money-saver.git"
  },
  "keywords": [
    "money",
    "finances",
    "cash",
    "expenses",
    "manager"
  ],
  "bugs": {
    "url": "https://github.com/idenisovs/money-saver/issues",
    "email": "i.denisovs@gmail.com"
  },
  "author": "Ilya Denisov",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "connect-memcached": "^1.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "http-status": "^1.5.0",
    "log4js": "^6.4.0",
    "moment": "^2.29.1",
    "ms": "^2.1.3",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "sqlite3": "^5.0.2",
    "uuid": "^8.3.2",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.2",
    "@types/memcached": "^2.2.7",
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.8",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/sqlite3": "^3.1.7",
    "@types/uuid": "^8.3.1",
    "@types/yargs": "^17.0.3",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
